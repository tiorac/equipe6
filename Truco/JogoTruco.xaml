<Window x:Class="Equipe6.Truco.JogoTruco"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Equipe6.Truco"
        mc:Ignorable="d" MinHeight="600"
        Title="Jogo de Truco" Height="600" Width="800">
    <Grid Background="Green">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <local:CartaBaralho Width="100" Height="150" Margin="10" />
            <local:CartaBaralho Width="100" Height="150" Margin="10" />
            <local:CartaBaralho Width="100" Height="150" Margin="10" />
        </StackPanel>


        <local:CartaBaralho Width="100"  Height="150" Margin="10" Grid.Row="1" HorizontalAlignment="Right" />


        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <local:CartaBaralho Width="100" Height="150" Margin="10" />
            <local:CartaBaralho Width="100" Height="150" Margin="10" />
            <local:CartaBaralho Width="100" Height="150" Margin="10" />
        </StackPanel>

    </Grid>
</Window>
